defaults
logfile ~/.msmtp.log
tls on
tls_trust_file /etc/pki/tls/certs/ca-bundle.crt

# gmail
account gmail
host smtp.gmail.com
port 587
from dangra@gmail.com
auth on
user dangra@gmail.com
