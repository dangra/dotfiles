# screen 9 mutt
# select 1

# Remove some stupid / dangerous key bindings
bind ^k
#bind L
bind ^\
# Make them better
bind \\ quit
bind K kill
bind I login on
bind O login off
bind } history

# ALT+j  y ALT+k
bindkey ^[1 prev # alt+1
bindkey ^[2 next # alt+2

deflogin off
autodetach on

startup_message off
bell "bell: %n (%t) [%w:%s]^G"
vbell on
vbell_msg "   Wuff  ----  Wuff!!  "

defscrollback 2000
nonblock on
defutf8 on
msgwait 2
altscreen on

# remove window title
shelltitle ""

hardstatus off
hardstatus alwayslastline
hardstatus string '%{= kG}[%{G}%l%{g}] %{= kW}%H %{= kG}[%= %{= kw}%?%-w%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+w%?%?%= %{g}][%{B}%m-%d %{W}%c%{g}]'
#hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][ %{B} %m-%d %{W}%c %{l} %{g}%l ]'
