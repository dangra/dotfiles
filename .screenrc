bind c screen 1
#bind 0 select 10
#screen 1
# screen 2
# screen 3
# screen 4
# screen 5
# screen 9 mutt
# select 1

# Remove some stupid / dangerous key bindings
bind ^k
#bind L
bind ^\
# Make them better
bind \\ quit
bind K kill
bind I login on
bind O login off
bind } history

bindkey -k k1 select 0 # F1
bindkey -k k2 select 1
bindkey -k k3 select 2
bindkey -k k4 select 3
bindkey -k k5 select 4
bindkey -k k6 select 5
bindkey -k k7 select 6
bindkey -k k8 select 7
bindkey -k k9 select 8
bindkey -k k; select 9  # F10
bindkey -k F1 select 10 # F11
bindkey -k F2 command   # Ctrl-A

# ALT+j  y ALT+k
bindkey ^[1 prev # alt+1
bindkey ^[2 next # alt+2

deflogin off
autodetach on

startup_message off
bell "bell: %n (%t) [%w:%s]^G"
vbell on
vbell_msg "   Wuff  ----  Wuff!!  "

# use faint color instead of underline
termcapinfo * us=\E[2m
# tell how to set 256 colors
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
#defbce "on"



defscrollback 2000
nonblock on
defutf8 on
msgwait 2
altscreen on

# remove window title
shelltitle ""

hardstatus off
hardstatus alwayslastline
hardstatus string '%{= kG}[%{G}%l%{g}] %{= kW}%H %{= kG}[%= %{= kw}%?%-w%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+w%?%?%= %{g}][%{B}%m-%d %{W}%c%{g}]'
#hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][ %{B} %m-%d %{W}%c %{l} %{g}%l ]'

