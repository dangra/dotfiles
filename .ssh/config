Host *
    HashKnownHosts no
    ForwardAgent   yes
    StrictHostKeyChecking no
    ServerAliveInterval 60
    ControlMaster auto
    ControlPath ~/.ssh/z-%r@%h:%p
    ControlPersist 30

Host *.scrapinghub.com
    User daniel
    Port 999

Host bitbucket.org
    User hg
    Compression yes

Host github.com
    User git
    ForwardAgent no
    KexAlgorithms curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256,diffie-hellman-group-exchange-sha1,diffie-hellman-group14-sha1
    Compression yes

Host openwrt
    User root
    Hostname 192.168.8.1
    KexAlgorithms diffie-hellman-group1-sha1
    Ciphers aes256-ctr
    MACs hmac-sha1

Host HGKafka
    Hostname 54.218.68.167
    IdentityFile ~/.ssh/memex-kafka.pem
    IdentitiesOnly yes
    User ubuntu

# Vagrant
Host vagrant-frankie
    Hostname 33.33.33.51
    IdentityFile ~/src/frankie/.vagrant/machines/frankie/virtualbox/private_key

Host vagrant*
    User vagrant
    UserKnownHostsFile /dev/null
    StrictHostKeyChecking no
    PasswordAuthentication no
    IdentityFile ~/.vagrant.d/insecure_private_key
    IdentityFile ~/.ssh/id_rsa
    IdentitiesOnly yes

# For some reason this must be the last section or it is not possible to override it
Host *
    # https://stribika.github.io/2015/01/04/secure-secure-shell.html
    KexAlgorithms curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256
    Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr
    MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha2-512,hmac-sha2-256,umac-128@openssh.com
    UseRoaming no
