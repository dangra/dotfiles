#!/bin/sh
[ "$1" ]||exit

# Chequeo q este el Subject original
grep -q ^Old-Subject: $1 ||exit

# cambia Old-Subject -> Subject -> Spam-Subject 
cat $1 |formail -R Subject: Spam-Subject: -R Old-Subject: Subject: >$1e

# reemplaza al mail con el nuevo
mv -f $1e $1

# marca de tiempo 1 segundos despues para q el mutt reconozca nuevo mail
touch -d '+1 seconds' $1

