#!/bin/bash
[[ $1 ]] || exit

DB=$1
REGION=${2:-eu}

case $REGION in
	eu)
		BUCKET=s3://backup.eu.mydeco.com/mysql/ip-10-226-221-220
		CFG=~/.s3cfg
		;;
	us)
		BUCKET=s3://backup.us.mydeco.com/mysql/domU-12-31-39-00-2A-01
		CFG=~/.s3cfg-us
		;;
	*)
esac

. ~/aws-$REGION

last=$(s3cmd -c $CFG ls $BUCKET/$DB/|tail -n1|awk '{print $4}')

filename=$(basename $last)
s3cmd -c $CFG get $last $DB-$filename
