#!/bin/sh

. ~/bin/functions

PIPE=$HOME/.statustop
rm -f $PIPE && mkfifo -m 622 $PIPE
[ -p $PIPE ] || exit
( echo ; tail -f $PIPE ) | dzen2 -h 15 -e '' -x '0' -w $SCREEN_WIDTH -ta l -fn $DFT_FN -fg $DFT_FG -bg $DFT_BG &

PIPE=$HOME/.statusbottom
rm -f $PIPE && mkfifo -m 622 $PIPE
[ -p $PIPE ] || exit
( echo ; tail -f $PIPE ) | dzen2 -h 15 -e '' -x '0' -w $SCREEN_WIDTH -ta c -fn $DFT_FN -fg $DFT_FG -bg $DFT_BG -y `bottomy $DFT_FN` &
