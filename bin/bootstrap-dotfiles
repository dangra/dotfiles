#!/bin/bash
[[ $1 = '-h' || -z $1 && -d ~/.dotfiles.git ]] && {
	echo "curl -Ls https://github.com/dangra/dotfiles/raw/master/bin/bootstrap-dotfiles |bash -"
	echo "wget --no-check-certificate -nv -O - https://github.com/dangra/dotfiles/raw/master/bin/bootstrap-dotfiles |bash -"
	exit
}

set -e -x
[[ -d dotfiles/.git ]] || git clone git@github.com:dangra/dotfiles.git || git clone https://dangra@github.com/dangra/dotfiles.git
export GIT_DIR=${1:-~/.dotfiles.git} GIT_WORK_TREE=${2:-~}
mv dotfiles/.git $GIT_DIR
rm -rf dotfiles
echo '*' >>$GIT_DIR/info/exclude
git reset --hard
